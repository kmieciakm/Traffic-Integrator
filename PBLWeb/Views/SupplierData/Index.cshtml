@model IEnumerable<PBLWeb.Data.SupplierData>

@{
    ViewData["Title"] = "Index";
}

<h1>Suppliers</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Register New Supplier</a>
</p>

<span class="badge badge-success pt-3 pb-3 mb-4 w-100">Activated</span>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(s => s.Active == true)) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApiUrl)
                </td>
                <td>
                    <a class="btn btn-outline-dark" asp-action="Disable" asp-route-id="@item.Id">Disable</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<span class="badge badge-secondary pt-3 pb-3 mb-4 w-100">Disabled</span>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(s => s.Active == false)) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApiUrl)
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Activate" asp-route-id="@item.Id">Activate</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>